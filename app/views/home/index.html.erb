                url: "gettable",
                type: 'GET',
                data: { mytfn: tfnn },
                beforeSend: function () {
                    $("#error-message").html("");
                    $("#ajax-progress").show();
                },
                complete: function () {
                    $("#ajax-progress").hide();
                },
                dataType: 'html',
                traditional: true,
                contentType: 'html',
                error: failedMessage,
                success: function (result) {
                    $('#showtable').html(result);
                }
            });
}			
</script>



